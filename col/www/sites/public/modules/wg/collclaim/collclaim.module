function _collection_claim_submit($form , &$form_state) {
  global $user;

  $copyright_db = array(
    0 => t('CC0 1.0 公眾領域貢獻宣告 (Public Domain Dedication)'),
    1 => t('創用 CC 「姓名標示 3.0 台灣」授權條款及其後版本 (CC BY 3.0 TW and later)'),
