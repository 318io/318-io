extends layout

block content
  nav(class='navbar navbar-default navbar-fixed-top')
    div(class='container')
      div(class='navbar-header')
        button(type='button', class='navbar-toggle collapsed', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')  
          span(class='sr-only') Toggle navigation
          span(class='icon-bar')
          span(class='icon-bar')
          span(class='icon-bar')
        a(class='navbar-brand', href='/') 318 Expo
      div(id='navbar', class='collapse navbar-collapse')
        ul(class='nav navbar-nav')
          li(class='active')
            a(href='#') About
          li
            a(href='#contact') Contact
          li(class='dropdown')
            a(href='#', class='dropdown-toggle', data-toggle='dropdown', role='button', aria-expanded='false') Add <span class='caret'></span>
            ul(class='dropdown-menu', role='menu')
              li
                a(href='/stickers/add', class='iframe') Sticker
              li
                a(href='/storys/add', class='iframe') Story
              li
                a(href='/pictures/add', class='iframe') Picture
                
  div(class='container' id='map_container')
    #map
    #trans_map
      each sticker in stickers
        - var thumbfile = '/images/stickers/' + sticker.sid + '.png';
        img(src="#{thumbfile}", class="sticker", kind="#{sticker.kind}", sid="#{sticker.sid}", style="width:#{sticker.width}px; height:#{sticker.height}px; position: absolute; top:#{sticker.pos_y}px; left:#{sticker.pos_x}px;" href="#sid_#{sticker.sid}")
            
        div(style='display:none')
          each sticker in stickers
            div(id="sid_#{sticker.sid}", kind="#{sticker.kind}") !{sticker.content}        

  footer(class='footer')
    div(class='container')
      p(class='text-muted') <a href='http://www.wordgleaner.com'>拾穗者文化有限公司</a>
